{% extends 'base.html.twig' %}

{% block title %}Produit {{app.produit.categorie}}{% endblock %}

{% block body %}
  

    <table class="table">
        <thead>
            <tr>
                
                
                <th>Categorie</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Photo</th>
                <th>Description</th>
                
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                 <td>{{ produit.category }}</td>
                 <td>{{ produit.nom }}</td>
                <td>{{ produit.marque }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.photo }}</td>
                <td>{{ produit.description }}</td>
             
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}

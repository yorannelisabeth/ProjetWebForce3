{% extends 'base.html.twig' %}


{% block titreH1 %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    


    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Roles</th>
                
                <th>Adresse</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>CodePostal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <table class="table table-dark table-borderless">
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                
                <td>{{ user.adresse }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.codePostal }}</td>
                <td class="bg-dark">
                    <a href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye">&nbsp Voir</i></a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-user-edit">&nbsp Edit</i></a>
                </td>
            </tr>
        </table>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="btn btn-success">Create new</a>
    
{% endblock %}
